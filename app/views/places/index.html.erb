<% @places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
<!-- Indicators -->
  <ol class="carousel-indicators">
    <% place.photos.each_with_index do |photo, i| %>
    <% if i == 0 %>
      <li data-target="#carouselExampleIndicators" data-slide-to=#{i) class="active">
        </li>
        <% else %>
        <li data-target="#carouselExampleIndicators" data-slide-to=#{i) >
      </li>
      <%end%>
    <% end %>
  </ol>

<!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% place.photos.each_with_index do |photo, i| %>
    <% if i == 0 %>
      <div class="carousel-item active">
        <%= image_tag photo.picture.url,class: 'd-block img-fluid'%>
          <div class="carousel-caption d-none d-md-block">
            <%= photo.caption %>
          </div>
        </div>
        <% else%>
        <div class="carousel-item">
        <%= image_tag photo.picture.url,class: 'd-block img-fluid'%>
          <div class="carousel-caption d-none d-md-block">
            <%= photo.caption %>
          </div>
        </div>
        <%end%>
        <% end %>
      </div>
    
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>

    <% if place.comments.present? %>
      <div class="col-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= place.comments.last.message %>
          <small><%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>


  </div>

<% end %>


<%= will_paginate @place, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, previous_label: "Older", next_label: "Newer", inner_window:1, outer_window: 0 %>